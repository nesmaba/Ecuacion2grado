<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_ecuacion2grado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="org.lapurisimavalencia.a2bachcc.ecuacion2grado.Ecuacion2grado">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="93dp"
                    app:srcCompat="@drawable/efi"
                    android:id="@+id/imageViewErasmus"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="13dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:layout_width="244dp"
                    android:layout_height="64dp"
                    app:srcCompat="@drawable/colegio"
                    android:id="@+id/imageViewCole"
                    android:layout_gravity="start|center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="330dp"
                    android:layout_height="61dp"
                    app:srcCompat="@drawable/erasmus"
                    android:id="@+id/imageViewEfi"
                    android:layout_gravity="center|center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <TextView
                android:text="ECUACIÓN DE 2º GRADO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTitulo"
                android:layout_weight="1"
                android:typeface="serif"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="24sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_vertical|center_horizontal|center">

                <EditText
                    android:layout_width="198dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/editTextA"
                    android:textSize="20dp"
                    android:gravity="end"
                    android:hint="a"
                    android:selectAllOnFocus="false"/>

                <TextView
                    android:text="x2 +  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewA"
                    android:textSize="20dp"/>

                <EditText
                    android:layout_width="198dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/editTextB"
                    android:textSize="20dp"
                    android:hint="b"
                    android:gravity="end"/>

                <TextView
                    android:text="x +  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewB"
                    android:textSize="20dp"/>

                <EditText
                    android:layout_width="198dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/editTextC"
                    android:hint="c"
                    android:textSize="20dp"/>

            </LinearLayout>

            <Button
                android:text="SOLUCIÓN"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:id="@+id/buttonResultado"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1" />

            <TextView
                android:text="Resultado:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewResultado"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewInfo"
                android:layout_weight="1"
                android:layout_marginLeft="100dp"
                android:textSize="20dp"/>

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDiscriminante"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="150dp"
                android:textSize="20dp"/>

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewResults1"
                android:layout_weight="1"
                android:layout_marginLeft="150dp"
                android:textSize="20dp"/>

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewResults2"
                android:layout_weight="1"
                android:layout_marginLeft="150dp"
                android:textSize="20dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/todos"
            android:layout_marginBottom="2dp"
            android:id="@+id/imageViewPeque"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Creado por:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCreadoPor"
            android:layout_weight="1"
            android:layout_above="@id/imageViewPeque"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="1117dp"
        android:layout_height="609dp"
        app:srcCompat="@drawable/todos"
        android:id="@+id/imageViewGrande"
        android:visibility="invisible"
        android:layout_gravity="center|center_vertical|center_horizontal"/>

</FrameLayout>